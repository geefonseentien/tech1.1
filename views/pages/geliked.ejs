<!DOCTYPE html>
<html lang="nl">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
    <header>
        <%- include('../partials/logged-in'); %>
    </header>
    <main class="background_img">
        <div class="overlay"></div>
        <section class="active_users">
            <h3>Deze mensen heb je geliked!</h3>
            <a id="" href="/dashboard">Ga verder met liken!<img src="../img/hartrood.png" alt=""></a>
            <div>
                <article>
                    <% users.forEach((users, index) => { %>
                        <li>
                            <% if(users.img){ %>
                                <img src="../../uploads/images/<%= users.img %>" alt="user image">
                                <p><%= users.name %></p>
                                <p><strong>Leeftijd:</strong> <%= users.age %></p>
                                <p><strong>Gebied:</strong> <%= users.area %></p>
                            <% } else{ %>  
                                <img src="../../img/no-user.png" alt="no user image">
                                <p><%= users.name %></p>
                                <p><strong>Leeftijd:</strong> <%= users.age %></p>
                                <p><strong>Gebied:</strong> <%= users.area %></p>
                            <% } %> 
                        </li>
                    <% }) %>
                </article>
            </div>
        </section>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>